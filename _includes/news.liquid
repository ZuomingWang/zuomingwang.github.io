<div class="news">
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
    <div
      class="news-container"
      {% if include.limit and page.announcements.scrollable and news_size > 3 %}
        style="max-height: 60vw; overflow-y: auto;"
      {% endif %}
    >
      {% assign news = site.news | sort: 'date' | reverse %}
      {% if include.limit and page.announcements.limit %}
        {% assign news_limit = page.announcements.limit %}
      {% else %}
        {% assign news_limit = news_size %}
      {% endif %}
      
      {% assign news_by_year = news | group_by_exp: 'item', 'item.date | date: "%Y"' %}
      {% assign sorted_years = news_by_year | sort: 'name' | reverse %}
      {% for year_group in sorted_years %}
        {% assign sorted_items = year_group.items | sort: 'date' | reverse %}
        {% assign current_count = 0 %}
        {% for item in sorted_items %}
          {% assign current_count = current_count | plus: 1 %}
          {% if current_count > news_limit %}
            {% break %}
          {% endif %}
        {% endfor %}
        
        {% if current_count > 0 %}
          <div class="news-year-group">
            <h4 class="news-year">{{ year_group.name }}</h4>
            <ul class="news-list">
              {% assign item_count = 0 %}
              {% for item in sorted_items %}
                {% assign item_count = item_count | plus: 1 %}
                {% if item_count > news_limit %}
                  {% break %}
                {% endif %}
                <li class="news-item">
                  <span class="news-content">
                    {% if item.inline %}
                      {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
                    {% else %}
                      <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
                    {% endif %}
                  </span>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
        
        {% assign total_shown = total_shown | plus: current_count %}
        {% if total_shown >= news_limit %}
          {% break %}
        {% endif %}
      {% endfor %}
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
